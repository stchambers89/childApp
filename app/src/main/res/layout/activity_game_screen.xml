<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gamescreen_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_day_port"
    android:orientation="vertical"
    android:layout_weight="2"
    tools:context=".GameScreenActivity">

    <ImageView
        android:id="@+id/mainShape"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        app:srcCompat="@drawable/trophy" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/shape1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/mainShape"
            app:layout_constraintTop_toBottomOf="@+id/shape2"
            app:srcCompat="@drawable/star" />

        <ImageView
            android:id="@+id/shape2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@+id/shape3"
            app:layout_constraintEnd_toStartOf="@+id/mainShape"
            app:layout_constraintTop_toBottomOf="@+id/shape1"
            app:srcCompat="@drawable/triangle" />

        <ImageView
            android:id="@+id/shape3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@+id/shape2"
            app:layout_constraintEnd_toStartOf="@+id/mainShape"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/heart" />
    </LinearLayout>

</LinearLayout>